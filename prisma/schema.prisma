// Prisma schema — V3.0 Startup Grade (Admin + Portfolio + Testimonials + Experience + Stack)

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ——— Admin unique (W-3) ———
model Admin {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String    @map("password_hash")
  name         String?
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")
  sessions     Session[]

  @@map("admin")
}

model Session {
  id        String   @id @default(cuid())
  adminId   String   @map("admin_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  admin     Admin    @relation(fields: [adminId], references: [id], onDelete: Cascade)

  @@index([adminId])
  @@index([token])
  @@index([expiresAt])
  @@map("session")
}

// ——— Portfolio (W-1) ———
model Project {
  id          String   @id @default(cuid())
  title       String
  description String?
  kpis        String?  // ex: "Réduction 40% temps chargement"
  url         String?
  imageUrl    String?  @map("image_url")
  order       Int      @default(0)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([order])
  @@map("project")
}

// ——— Témoignages clients (V3.0) ———
model Testimonial {
  id        String   @id @default(cuid())
  nom       String
  role      String   // rôle du client (ex: "CEO, Startup X")
  texte     String
  order     Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([order])
  @@map("testimonial")
}

// ——— Parcours pro (V3.0) ———
model Experience {
  id       String   @id @default(cuid())
  boite   String   // entreprise
  poste   String
  duree   String   // ex: "2020 — 2024"
  order   Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([order])
  @@map("experience")
}

// ——— Stack / technos (V3.0) ———
model Stack {
  id         String   @id @default(cuid())
  nom        String
  categorie  String   // ex: "Frontend", "Backend", "Tools"
  icone      String?  // emoji ou nom d'icône
  order      Int      @default(0)
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@index([order])
  @@index([categorie])
  @@map("stack")
}

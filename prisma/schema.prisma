// Prisma schema — V4.0 SaaS-Grade (Lead, Category, Metric, FAQ, Testimonial enrichi)

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ——— Admin unique (W-3) ———
model Admin {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String    @map("password_hash")
  name         String?
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")
  sessions     Session[]

  @@map("admin")
}

model Session {
  id        String   @id @default(cuid())
  adminId   String   @map("admin_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  admin     Admin    @relation(fields: [adminId], references: [id], onDelete: Cascade)

  @@index([adminId])
  @@index([token])
  @@index([expiresAt])
  @@map("session")
}

// ——— Catégories projets (V4.0) ———
model Category {
  id       String    @id @default(cuid())
  name     String
  slug     String    @unique
  order    Int       @default(0)
  projects Project[]

  @@index([slug])
  @@map("category")
}

// ——— Portfolio (W-1) ———
model Project {
  id          String    @id @default(cuid())
  title       String
  description String?
  kpis        String?
  url         String?
  imageUrl    String?   @map("image_url")
  order       Int       @default(0)
  categoryId  String?   @map("category_id")
  category    Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@index([order])
  @@index([categoryId])
  @@map("project")
}

// ——— Leads (V4.0) ———
enum LeadStatus {
  NEW
  IN_PROGRESS
  CLOSED
}

model Lead {
  id        String    @id @default(cuid())
  email     String
  name      String?
  message   String
  status    LeadStatus @default(NEW)
  category  String?   // ex: "projet", "audit", "autre"
  createdAt DateTime  @default(now()) @map("created_at")

  @@index([status])
  @@index([createdAt])
  @@map("lead")
}

// ——— Métriques dashboard (V4.0) ———
model Metric {
  id     String @id @default(cuid())
  label  String
  value  String // numérique ou texte
  unit   String? // ex: "%", "k", ""
  order  Int    @default(0)

  @@index([order])
  @@map("metric")
}

// ——— Témoignages clients (V4.0 : note + avatar) ———
model Testimonial {
  id        String   @id @default(cuid())
  nom       String
  role      String
  texte     String
  note      Int?     // 1-5
  avatarUrl String?  @map("avatar_url")
  order     Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([order])
  @@map("testimonial")
}

// ——— FAQ (V4.0) ———
model Faq {
  id       String   @id @default(cuid())
  question String
  reponse  String
  theme    String?  // ex: "MVP", "Tarifs", "Délais"
  order    Int      @default(0)

  @@index([order])
  @@map("faq")
}

// ——— Parcours pro (V3.0) ———
model Experience {
  id        String   @id @default(cuid())
  boite    String
  poste    String
  duree    String
  order    Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([order])
  @@map("experience")
}

// ——— Stack / technos (V3.0) ———
model Stack {
  id         String   @id @default(cuid())
  nom        String
  categorie  String
  icone      String?
  order      Int      @default(0)
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@index([order])
  @@index([categorie])
  @@map("stack")
}
